<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- Dubbo注解扫描包名 -->
    <dubbo:annotation package="org.ostenant.springboot.learning.examples.serviceimpl"/>

    <dubbo:protocol name="dubbo"/>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="org.ostenant.springboot.learning.examples.service.InstituteService"
                   ref="instituteServiceImpl" protocol="dubbo" timeout="5000"/>

    <dubbo:service interface="org.ostenant.springboot.learning.examples.service.StudentService"
                   ref="studentServiceImpl" protocol="dubbo" timeout="5000"/>

</beans>
